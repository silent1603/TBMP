{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Release",
            "type": "shell",
            "command": "${workspaceFolder}/build.ps1",
            "args": ["-Type", "Release"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "powershell",
                "args": ["-NoProfile", "-ExecutionPolicy", "Bypass", "-File", "${workspaceFolder}/build.ps1", "-Type", "Release"]
            },
            "osx": {
                "command": "bash",
                "args": ["${workspaceFolder}/build.sh", "release"]
            },
            "linux": {
                "command": "bash",
                "args": ["${workspaceFolder}/build.sh", "release"]
            }
        },
